{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'section-related-products.css' | asset_url | stylesheet_tag }}

{% if section.settings.image_shape == 'blob' %}
  {{ 'mask-blobs.css' | asset_url | stylesheet_tag }}
{%- endif -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .related-products__slider {
    position: relative;
    overflow: hidden;
  }
  .related-products__slider .swiper-slide { 
    height: auto;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <product-recommendations
    class="related-products page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    data-url="{{ routes.product_recommendations_url }}?limit={{ section.settings.products_to_show }}"
    data-section-id="{{ section.id }}"
    data-product-id="{{ product.id }}"
  >
    {% if recommendations.performed and recommendations.products_count > 0 %}
      <h5 class="related-products__heading inline-richtext h5 center">
        {{ section.settings.heading }}
      </h5>

      <!-- Swiper Slider -->
      <div class="swiper related-products__slider">
        <div class="swiper-wrapper">
          {% for recommendation in recommendations.products %}
            <div class="swiper-slide">
              {% render 'card-product',
                card_product: recommendation,
                media_aspect_ratio: section.settings.image_ratio,
                image_shape: section.settings.image_shape,
                show_secondary_image: section.settings.show_secondary_image,
                show_vendor: section.settings.show_vendor,
                show_rating: section.settings.show_rating
              %}
            </div>
          {% endfor %}
        </div>

        <!-- Swiper Controls -->
        <div class="swiper-btn center">
        <div class="swiper-button-prev"><svg width="91" height="19" viewBox="0 0 91 19" fill="none" xmlns="http://www.w3.org/2000/svg">
<line x1="90.4546" y1="9.4455" x2="14.7623" y2="9.4455" stroke="#F7DAC7"></line>
<path d="M1 9.28952L14.9343 1.24456L14.9343 17.3345L1 9.28952Z" stroke="#F7DAC7"></path>
</svg>
</div>
        <div class="swiper-button-next"><svg width="91" height="19" viewBox="0 0 91 19" fill="none" xmlns="http://www.w3.org/2000/svg">
<line y1="9.1333" x2="75.6924" y2="9.1333" stroke="#F7DAC7"></line>
<path d="M89.4546 9.28928L75.5203 17.3342L75.5204 1.24431L89.4546 9.28928Z" stroke="#F7DAC7"></path>
</svg>
</div>
</div>
        <div class="swiper-pagination hide"> </div>
      </div>
      <!-- End Swiper Slider -->
    {% endif %}
  </product-recommendations>

  {% if section.settings.image_shape == 'arch' %}
    {{ 'mask-arch.svg' | inline_asset_content }}
  {%- endif -%}
</div>

<!-- Swiper JS -->

<script>
document.addEventListener('DOMContentLoaded', function () {
  const SLIDER_SELECTOR = '.related-products__slider';

  function initSwipers() {
    if (typeof Swiper === 'undefined') {
      console.warn('âš ï¸ Swiper not loaded');
      return;
    }

    // Initialize related products sliders
    const sliders = document.querySelectorAll(SLIDER_SELECTOR);
    sliders.forEach((swiperEl) => {
      if (swiperEl.dataset.swiperInitialized === 'true') return;

      const nextEl = swiperEl.querySelector('.swiper-button-next');
      const prevEl = swiperEl.querySelector('.swiper-button-prev');
      const paginationEl = swiperEl.querySelector('.swiper-pagination');

      if (!swiperEl.querySelector('.swiper-wrapper')) return;

      new Swiper(swiperEl, {
        slidesPerView: 1,
        spaceBetween: 0,
        loop: false,
        grabCursor: true,
        nested: true,              // âœ… important for child swipers
        watchSlidesProgress: true, // âœ… helps child sliders update properly
        grabCursor: false,     // ðŸ‘ˆ disables drag behavior
        allowTouchMove: false, // ðŸ‘ˆ fully disables parent dragging
        observer: true,
        observeParents: true,
        autoplay: false,
        pagination: paginationEl ? { el: paginationEl, clickable: true } : {},
        navigation: {
          nextEl: nextEl || null,
          prevEl: prevEl || null,
        },
        breakpoints: {
          767: { slidesPerView: 3, spaceBetween: 19 },
          1024: { slidesPerView: 4, spaceBetween: 24 }, // optional
        },
        on: {
          init() {
            console.log('âœ… Related Products Swiper initialized');
          },
        },
      });

      swiperEl.dataset.swiperInitialized = 'true';
    });

    // Initialize any child swipers inside related products (e.g. product image gallery)
    const childSliders = document.querySelectorAll('.swiper-card-slider');
    childSliders.forEach((child) => {
      if (child.dataset.swiperInitialized === 'true') return;

      new Swiper(child, {
        slidesPerView: 1,
      spaceBetween: 0,
      allowTouchMove: false,   // ðŸ‘ˆ disables dragging
      simulateTouch: false,    // ðŸ‘ˆ disables mouse dragging
      navigation: {
        nextEl: '.swiper-button-next2',
        prevEl: '.swiper-button-prev2'
      },
      breakpoints: {
        1024: { slidesPerView: 1 },
        768: { slidesPerView: 1 },
        480: { slidesPerView: 1 }
      }
      });

      child.dataset.swiperInitialized = 'true';
      console.log('âœ… Child Swiper initialized');
    });
  }

  // Shopify Section Load
  document.addEventListener('shopify:section:load', (event) => {
    if (event.detail.sectionId.includes('related-products')) {
      setTimeout(initSwipers, 300);
    }
  });

  // Fallback observers
  const observer = new MutationObserver(() => {
    if (document.querySelector(SLIDER_SELECTOR)) initSwipers();
  });
  observer.observe(document.body, { childList: true, subtree: true });

  setTimeout(initSwipers, 800);
});
</script>







